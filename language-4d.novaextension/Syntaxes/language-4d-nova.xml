<?xml version="1.0" encoding="UTF-8"?>
<syntax name="fourd">
    <meta>
        <name>4D</name>
        <type>script</type>
        <preferred-file-extension>4dm</preferred-file-extension>
    </meta>
    
    <detectors>
        <extension priority="1.0">4dm</extension>
    </detectors>
    
    <indentation>
        <increase>
            <expression></expression>
        </increase>
        <decrease>
            <expression></expression>
        </decrease>
    </indentation>
    
    <comments>
        <single>
            <expression>//</expression>
        </single>
        <multiline>
            <starts-with>
                <expression></expression>
            </starts-with>
            <ends-with>
                <expression></expression>
            </ends-with>
        </multiline>
    </comments>
    
    <injection>
        <expression>^(4dm)$</expression>
    </injection>
    
    <tree-sitter language="fourd">
        <highlights path="highlights.scm" />
        <folds path="folds.scm" />
        <symbols path="symbols.scm" />
    </tree-sitter>
</syntax>
